    <!-- Navigation Buttons -->
    <div class="nav-buttons">
        <button id="prevBtn" onclick="changeSlide(-1)" class="bg-blue-600 hover:bg-blue-700">Previous</button>
        <button id="nextBtn" onclick="changeSlide(1)" class="bg-blue-600 hover:bg-blue-700">Next</button>
